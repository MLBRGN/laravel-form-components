{
    "$schema": "http://laravel-ide.com/schema/laravel-ide-v2.json",
    "blade": {
        "components": {
            "viewPaths": [
                {
                    "path": "vendor/mlbrgn/laravel-form-components/resources/views"
                },
                {
                    "path": "vendor/mlbrgn/laravel-form-components/src/View/Components",
                    "prefix": "form-"
                }
            ],
            "directives": [
                {
                    "name": "bind",
                    "prefix": "<?php app(\\Mlbrgn\\LaravelFormComponents\\FormDataBinder::class)->bind(",
                    "suffix": "); ?>"
                },
                {
                    "name": "endbind",
                    "prefix": "<?php app(\\Mlbrgn\\LaravelFormComponents\\FormDataBinder::class)->pop();",
                    "suffix": "?>"
                }
            ]
        }
    }
}
